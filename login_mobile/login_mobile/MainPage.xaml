<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="login_mobile.MainPage">

    <StackLayout BackgroundColor="#BA68C8">
        <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Label Text="Welcome to xamarin" FontSize="45" Margin="20,150" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="White"/>
        </StackLayout>
        <StackLayout VerticalOptions="End">
            <Button Text="LogIn" BackgroundColor="#00E676" Margin="10, 0" HorizontalOptions="Center" TextColor="White" FontSize="25" FontAttributes="Bold" Padding="25, 10" CornerRadius="5" />
            <Button Text="Register" BackgroundColor="Transparent" Margin="10, 20" TextColor="White" HorizontalOptions="Center" WidthRequest="150" FontSize="18" />
        </StackLayout>
    </StackLayout>
</ContentPage>